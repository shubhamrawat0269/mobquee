<?xml version="1.0" encoding="utf-8"?>
<item targetClass="Grid" mockup="com.mobilous.builder.client.pageeditor.editor.mockup.Grid.GridView" visible="true" visibleInTableView="true" imagePath="assets/uitype/grid.png" description="Here is the label description">
	<properties>
		<type name="Type" @stopCommit="true">
			<property path="name" input="spark.components.TextInput">
				<validations>
					<validation validator="UniqUINameValidator">
						<args>
							<arg property="currentSettings" value="{@currentSettings:}"/>
							<arg property="pageContainerDic" value="{@page:}"/>
							<arg property="uiPartDic" value="{@base:}"/>
							<arg property="tableViewCellDic" value="{@tableviewCell:}"/>
							<arg property="toolbarUiDic" value="{@toolbarUiDic:}"/>
						</args>
					</validation>
				</validations>     
			</property>
			<property path="hidden" dataType="Boolean" input="spark.components.CheckBox" value="false" copyable="true"/>		
		</type>
		<type name="Style" @stopCommit="true">
			<property path="rowSpacing" input="spark.components.NumericStepper" min="0" max="12" inc="2" init="4" copyable="true"/>
			<property path="columnSpacing" input="spark.components.NumericStepper" min="0" max="12" inc="2" init="4" copyable="true"/>
			<property path="backgroundColor.alpha" input="spark.components.NumericStepper" min="0.0" max="1.0" inc="0.1" copyable="true"/>
			<property path="backgroundColor" dataType="ColorDic" input="mx.controls.ColorPicker" copyable="true"/>
			<property path="justifyContent" dataType="custom" input="spark.components.RadioButton" init="left" copyable="true">
				<dataSource>
					<data name="start" path="start"/>
					<data name="center" path="center"/>
					<data name="space-between" path="space-between"/>
					<data name="space-around" path="space-around"/>
					<data name="end" path="end"/>
				</dataSource>
			</property>
			<property path="alignItems" dataType="custom" input="spark.components.RadioButton" init="alignItems" copyable="true">
				<dataSource>
					<data name="start" path="start"/>
					<data name="center" path="center"/>
					<data name="end" path="end"/>
				</dataSource>
			</property>
			<property formKey="dataarray[0].col" path="dataarray[0]" input="ButtonTextLabel" popup="columns" source="Grid">
				<dependentActions>
					<when at="preCommit" stopCommit="true">
						<action target="{@form[dataarray[0].col]:}" method="{@base:notifyChange()}"/>
					</when>
				</dependentActions>
			</property>
			<property formKey="dataarray[0].row" path="dataarray[0]" input="ButtonTextLabel" popup="Rows" source="Grid">
				<dependentActions>
					<when at="preCommit" stopCommit="true">
						<action target="{@form[dataarray[0].row]:}" method="{@base:notifyChange()}"/>
					</when>
				</dependentActions>
			</property>
		</type>		  
		<type name="Items">
			<property formKey="gridItems" path="gridItems" input="spark.components.List" labelField="heading" copyable="true">
			</property >
			<property path="gridItems[*].heading" input="spark.components.TextInput"/>
			<property path="gridItems[*].height" input="spark.components.NumericStepper" min="40" max="1000" inc="1" init="160" copyable="true"/>			
			<property path="gridItems[*].columns" input="spark.components.NumericStepper" min="1" max="5" inc="1" init="1" copyable="true"/>   
			<property path="gridItems[*].indexOfColumn" input="spark.components.NumericStepper" min="1" max="5" inc="1" init="1" copyable="true"/>
			<property formKey="gridItems[*].Fields" path="gridItems[*]" input="LabelWithButton" popup="gridCellEditor" source="Grid" fieldname="Fields">
				<dependentActions>
					<when at="preCommit" stopCommit="true">
						<action target="{@form[gridItems[*].Fields]:}" method="{@base:notifyChange()}"/>
					</when>
				</dependentActions>
			</property>
		</type>  		
		<type name="Geometry" @stopCommit="true">
				<property path="frame.x" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
				<property path="frame.y" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
				<property path="frame.width" dataType="Number" input="spark.components.NumericStepper" min="50" max="10000" init="320" copyable="true"/>
				<property path="frame.height" dataType="Number" input="spark.components.NumericStepper" min="10" max="10000" init="108" copyable="true"/>
			</type> 
	</properties>
</item>
