<?xml version="1.0" encoding="utf-8"?>
<item targetClass="Indicator" mockup="com.mobilous.builder.client.pageeditor.editor.mockup.Indicator.IndicatorView" visible="true"  imagePath="assets/toolbox/ico_indicator.png" description="Here is the label description"
		helpLink_EN="/indicator3.htm" helpLink_JP="/sheet002.htm#RANGE!A1400">
	<properties>
		<type name="Type" @stopCommit="true">
			<property path="name" input="spark.components.TextInput">
				<validations>
					<validation validator="UniqUINameValidator">
						<args>
							<arg property="currentSettings" value="{@currentSettings:}"/>
							<arg property="pageContainerDic" value="{@page:}"/>
							<arg property="uiPartDic" value="{@base:}"/>
							<arg property="tableViewCellDic" value="{@tableviewCell:}"/>
							<arg property="toolbarUiDic" value="{@toolbarUiDic:}"/>
						</args>
					</validation>
				</validations>
			</property>
			<property path="Style" dataType="String" input="spark.components.DropDownList" copyable="true">
				<dataSource>
					<data name="White" dataType="String"/>
					<data name="Gray" dataType="String"/>
				</dataSource>
			</property>
			<property path="InitialState" dataType="String" input="spark.components.DropDownList" init="stop" copyable="true">
				<dataSource labelField="name" valueField="name">
					<data name="start" toolTip="indicator will start automatically"/>
					<data name="stop" toolTip="indicator will be in static state"/>
				</dataSource>
			</property>
			<property path="StarthidesWhenStopped" dataType="Boolean" input="spark.components.CheckBox" copyable="true"/>
		</type>
		<type name="Geometry" @stopCommit="true">
			<property path="frame.x" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
			<property path="frame.y" dataType="Number" input="spark.components.NumericStepper" min="0" max="10000" copyable="true"/>
			<property path="frame.width" dataType="Number" input="spark.components.NumericStepper" min="20" max="10000" init="44" copyable="true"/>
			<property path="frame.height" dataType="Number" input="spark.components.NumericStepper" min="20" max="10000" init="44" copyable="true"/>
		</type> 
	</properties>
</item>
